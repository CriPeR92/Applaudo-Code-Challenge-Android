<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.applaudocodechallengeandroid.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
        android:id="@+id/action_homeFragment_to_detailsFragment"
        app:destination="@id/detailsFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.applaudocodechallengeandroid.ui.animeDetails.AnimeDetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_anime_details">
    </fragment>

</navigation>